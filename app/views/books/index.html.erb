<div class="container">
  <div class="row">

    <div class="col-lg-12">
      <% if flash[:notice] %>
        <p style="color:green"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:error] %>
        <div style="color:red">
          <h4><%= flash[:error] %> errors prohibited this book from being saved:</h4>
          <% flash.each do |message_type, message| %>
            <% if message_type == 'message' %>
              <%=message.html_safe %>
            <% end%>
          <% end %>
        </div>
      <% end %>
    </div>


    <div class="col-lg-4">
      <%= render 'books/new' %>
    </div>

    <div class="col-lg-8">
      <h3>Books</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%=link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>