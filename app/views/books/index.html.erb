<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'books/new' %>
    </div>
    
    <div class="col-lg-8">
      <h3>Books</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>