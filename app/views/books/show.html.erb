<div class="container">
  <div class="row">

    <div class="col-lg-4">
      <%= render 'books/new' %>
    </div>

    <div class="col-lg-8">
      <h3>Book detail</h3>
      <table class="table table-striped">
        <tbody>
            <tr>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td><%=link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
              <td><%=link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger " %></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>