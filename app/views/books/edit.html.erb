<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <% if flash[:notice] %>
        <p style="color:green"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:error] %>
        <div style="color:red">
          <h4><%= flash[:error] %> errors prohibited this book from being saved:</h4>
          <% flash.each do |message_type, message| %>
            <% if message_type == 'message' %>
              <%=message.html_safe %>
            <% end%>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>Editing Book</h3>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title", class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="inputOpinion">Introduction</label>
          <%= f.text_area :body, id:"inputOpinion", class:"form-control" %>
        </div>
        <%= f.submit 'Update Book', class: "btn btn-success" %>
      <% end %>
      <div>
        <%=link_to "Show", book_path(@book.id) %>
         |
        <%=link_to "Back", books_path() %>
      </div>
    </div>
  </div>
</div>