<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>Editing book</h3>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title", class:"form-control" %>
        </div>
        <div class="form-group">
          <label for="inputOpinion">Introduction</label>
          <%= f.text_area :body, id:"inputOpinion", class:"form-control" %>
        </div>
        <%= f.submit 'Update Book', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>